    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat" >
        <activity
            android:name=".MyActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DisplayMessageActivity"
            android:label="@string/title_activity_display_message"
            android:parentActivityName=".MyActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.shebdev.sclermont.myfirstapp.MyActivity" />
        </activity>
        <activity
            android:name=".MessageSelect"
            android:label="@string/title_activity_message_select"
            android:parentActivityName=".MyActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.shebdev.sclermont.myfirstapp.MyActivity" />
        </activity>
        <activity
            android:name=".MessagePartEdit"
            android:label="@string/title_activity_message_part_edit"
            android:parentActivityName=".MyActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.shebdev.sclermont.myfirstapp.MyActivity" />
        </activity>
    </application>

</manifest>
