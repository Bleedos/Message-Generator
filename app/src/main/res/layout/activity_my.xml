<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="@string/remplir_champs"
        android:id="@+id/txtRemplirChamps" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="@string/bonjour"
        android:id="@+id/textView"
        android:layout_below="@+id/txtRemplirChamps"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/edit_nom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/edit_nom"
        android:layout_gravity="top"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="12dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="@string/aujoudhui"
        android:id="@+id/textView2"
        android:layout_below="@+id/edit_nom"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button" />
    <EditText
        android:id="@+id/edit_fin_message"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:hint="@string/edit_fin_message"
        android:layout_gravity="bottom"
        android:layout_below="@+id/textView2"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button"
        android:gravity="top"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_recycler_view"
        android:scrollbars="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/edit_fin_message"
        android:layout_above="@+id/bouton_sauvegarder" />

    <Button
        android:id="@+id/bouton_sauvegarder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="true"
        android:text="Sauv."
        android:textSize="9dp"
        android:onClick="sauvegarderMessage"
        android:layout_marginBottom="29dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/bouton_charger"
        android:layout_toLeftOf="@+id/bouton_charger_assembly"
        android:layout_toStartOf="@+id/bouton_charger_assembly" />

    <!-- TODO: ramener les strings partout @string/... -->
    <Button
        android:id="@+id/bouton_charger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="true"
        android:text="Charg."
        android:textSize="9dp"
        android:onClick="chargerMessage"
        android:layout_alignTop="@+id/bouton_sauvegarder"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/bouton_charger_assembly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="true"
        android:text="Charg. assem."
        android:textSize="9dp"
        android:onClick="chargerAssembly"
        android:layout_below="@+id/my_recycler_view"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/bouton_ajouter_ligne"
        android:layout_width="50sp"
        android:layout_height="wrap_content"
        android:enabled="true"
        android:text="+"
        android:textSize="9dp"
        android:onClick="ajouterLigne"
        android:layout_below="@+id/my_recycler_view"
        android:layout_toLeftOf="@+id/button"
        android:layout_toStartOf="@+id/button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gen"
        android:textSize="9dp"
        android:onClick="genererMessage"
        android:layout_gravity="right"
        android:layout_alignTop="@+id/bouton_charger"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/button"
        android:layout_toEndOf="@+id/txtRemplirChamps" />

</RelativeLayout>
