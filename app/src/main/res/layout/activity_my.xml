<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="@string/remplir_champs"
        android:id="@+id/txtRemplirChamps" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="@string/bonjour"
        android:id="@+id/textView"
        android:layout_below="@+id/txtRemplirChamps"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/edit_nom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/edit_nom"
        android:layout_gravity="top"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <EditText
        android:id="@+id/edit_assembly_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/edit_titre_assemblage"
        android:layout_gravity="bottom"
        android:layout_below="@+id/edit_nom"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button"
        android:gravity="top"/>
    <EditText
        android:id="@+id/edit_assembly_description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/edit_description_assemblage"
        android:layout_gravity="bottom"
        android:layout_below="@+id/edit_assembly_title"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button"
        android:gravity="top"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_recycler_view"
        android:scrollbars="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/edit_assembly_description"
        android:layout_above="@+id/bouton_sauvegarder" />

    <!-- TODO: ramener les strings partout @string/... -->
    <Button
        android:id="@+id/bouton_charger_assembly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="true"
        android:text="@string/button_charger"
        android:textSize="9dp"
        android:onClick="chargerAssembly"
        android:layout_alignTop="@+id/bouton_sauvegarder"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <Button
        android:id="@+id/bouton_sauvegarder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="true"
        android:text="@string/button_sauvegarder"
        android:textSize="9dp"
        android:onClick="sauvegarderMessage"
        android:layout_marginBottom="19dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/bouton_charger_assembly" />

    <Button
        android:id="@+id/bouton_ajouter_ligne_existante"
        android:layout_width="50sp"
        android:layout_height="wrap_content"
        android:enabled="true"
        android:text="+X"
        android:textSize="9dp"
        android:onClick="ajouterLigneExistante"
        android:layout_below="@+id/my_recycler_view"
        android:layout_toLeftOf="@+id/bouton_ajouter_ligne"
        android:layout_toStartOf="@+id/button" />
    <Button
        android:id="@+id/bouton_ajouter_ligne"
        android:layout_width="50sp"
        android:layout_height="wrap_content"
        android:enabled="true"
        android:text="+"
        android:textSize="9dp"
        android:onClick="ajouterLigne"
        android:layout_below="@+id/my_recycler_view"
        android:layout_toLeftOf="@+id/button"
        android:layout_toStartOf="@+id/button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_generer"
        android:textSize="9dp"
        android:onClick="genererMessage"
        android:layout_gravity="right"
        android:id="@+id/button"
        android:layout_alignTop="@+id/bouton_sauvegarder"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
